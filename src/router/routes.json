{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/dashboard": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view dashboard",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/invoices/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view invoices",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/clients": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view clients",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/projects": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view projects",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/settings": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view settings",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  }
}